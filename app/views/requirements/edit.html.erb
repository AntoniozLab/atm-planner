  <div class="col-lg-10">

    <div class="card position-relative">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Detalles</h6>
      </div>
      <div class="card-body">
        <div>
          <%= render 'form', requirement: @requirement %>
        </div>

        <!-- Links inferiores -->
        <hr />
        <ul class="nav small">
          <li class="nav-item border-right">
            <a href="<%= requirements_path %>" class="nav-link py-1 px-2">‚Üê Ver todos</a>
          </li>
          <li class="nav-item">
            <%= link_to 'Ver detalle', @requirement, class: "nav-link py-1 px-2" %>
