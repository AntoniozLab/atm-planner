<p id="notice"><%= notice %></p>

<h1>Requirements</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Request date</th>
      <th>Completion date</th>
      <th>Percentage success</th>
      <th>User assigned</th>
      <th>Attachment url</th>
      <th>User</th>
      <th>Requirement state</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requirements.each do |requirement| %>
      <tr>
        <td><%= requirement.description %></td>
        <td><%= requirement.request_date %></td>
        <td><%= requirement.completion_date %></td>
        <td><%= requirement.percentage_success %></td>
        <td><%= requirement.user_assigned %></td>
        <td><%= requirement.attachment_url %></td>
        <td><%= requirement.user_id %></td>
        <td><%= requirement.requirement_state_id %></td>
        <td><%= requirement.location_id %></td>
        <td><%= link_to 'Show', requirement %></td>
        <td><%= link_to 'Edit', edit_requirement_path(requirement) %></td>
        <td><%= link_to 'Destroy', requirement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Requirement', new_requirement_path %>
