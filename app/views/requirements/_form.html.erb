<%= form_with(model: requirement, local: true) do |form| %>
<% if requirement.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-sm alert-danger px-3 py-2 small">
    <p class="mb-2"><%= pluralize(requirement.errors.count, "error") %> impide crear el requerimiento:</p>

    <ul class="mb-0">
      <% requirement.errors.full_messages.each do |message| %>
      <li class=""><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>


<div class="form-group">
  <%= form.label :user_id, 'Usuario' %>
  <%= form.select :user_id, User.all.collect {|e| [e.name, e.id]}, { :include_blank => "Seleccione" }, { :class => "form-control form-control-sm" } %>
</div>

<div class="form-group">
  <div class="form-row mx-0">
    <%= form.label :request_date, 'Fecha de solicitud' %>
  </div>

  <div class="form-row mx-0">
    <%= form.datetime_select :request_date, {}, { :class => "form-control col form-control-sm mr-1" }  %>
  </div>

</div>

<div class="form-group">
  <%= form.label :title, 'DescripciÃ³n', class: "" %>
  <%= form.text_field :title, class: "form-control form-control-sm", placeholder: "Opcional" %>
</div>


<div class="form-group">
  <%= button_tag(class: "btn btn-success btn-icon-split btn-sm") do %>
  <span class="icon text-white-50">
    <i class="fas fa-check"></i>
  </span>
  <span class="text">Guardar</span>
  <% end %>
</div>
<% end %>