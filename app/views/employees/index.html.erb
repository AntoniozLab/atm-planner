<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Lista de usuarios</h6>
  </div>
  <div class="card-body">
    <div class="text-right" style="width: 20%;margin-bottom:15px;" >
      <%= link_to 'Crear nuevo usuario', new_user_registration_path, class: "btn btn-primary btn-user btn-block"  %>
    </div>
