                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
              </tr>
              <% @data.each do |data| %>
              <tr>
                <td><%= data.id %></td>
                <td><%= data.name %></td>
                <td><%= data.last_name %></td>
                <td><%= data.email %></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>