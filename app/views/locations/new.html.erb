<h1 class="h3 mb-4 text-gray-800 font-weight-bold">Locación</h1>
<div class="row">
  <div class="col-lg-10">

    <div class="card position-relative">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Nueva locación</h6>
      </div>
      <div class="card-body">
        <div>
          <%= render 'form', location: @location %>
        </div>

        <!-- Links inferiores -->
        <hr />
        <ul class="nav small">
          <li class="nav-item">
            <a href="<%= locations_path %>" class="nav-link py-1 px-2">← Ver todos</a>
          </li>
        </ul>

      </div>
    </div>
  </div>
</div>


