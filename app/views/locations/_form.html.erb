<div class="items">
  <div class="block-form">
    <fieldset-standard>      
      <%= form_with(model: location, local: true, html: {class: 'admin' }) do |form| %>
        <% if location.errors.any? %>
          <div id="error_explanation">
            <h3 class="text_danger"><%= pluralize(location.errors.count, "error(es)") %> al registrar</h3>
            <ul>
              <% location.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <div class="items">
            <div class="block-100">
              <%= form.label :reference_code, "Código Referencia"%>
            </div>
            <div class="block-100">
              <%= form.text_field :reference_code, { :class => "form-control"} %>  
            </div>
          </div>                
        </div>

        <div class="field">
          <div class="items">
            <div class="block-100">
              <%= form.label :name, "Nombre Locación"%>
            </div>
            <div class="block-100">
              <%= form.text_field :name, { :class => "form-control"} %>  
            </div>
          </div>                
        </div>

        <div class="field">
          <div class="items">
            <div class="block-100">
              <%= form.label :address, "Dirección"%>
            </div>
            <div class="block-100">
              <%= form.text_field :address, { :class => "form-control"} %>  
            </div>
          </div>                
        </div>

        <div class="field">
          <div class="items">
            <div class="block-100">
              <%= form.label :address_reference, "Dirección Referencia"%>
            </div>
            <div class="block-100">
              <%= form.text_field :address_reference, { :class => "form-control"} %>  
            </div>
          </div>                
        </div>

        <div class="field">
          <div class="items">
            <div class="block-100" >
            <%= form.label "Cliente"%>
            </div>
            <div class="block-100">                             
              <%= form.select :location_owner_id, LocationOwner.all.collect {|e| [e.business_name, e.id]} , { :include_blank => "Seleccione" }, { :class => "form-control" } %>
            </div>
          </div>    
        </div>

        <!--<div class="field">
          <div class="items">
            <div class="block-100">
          <%= form.label "Departamento"%>
            </div>
            <div class="block-100">
              <%= form.select :department_id, Department.all.collect {|e| [e.name, e.id]} , { :include_blank => "Seleccione" }, { :class => "form-control" } %>
            </div>
          </div>    
        </div>

        <div class="field">
          <div class="items">
            <div class="block-100">
          <%= form.label "Provincia"%>
            </div>
            <div class="block-100">
              <%= form.select :province_id, Province.all.collect {|e| [e.name, e.id]} , { :include_blank => "Seleccione" }, { :class => "form-control" } %>
            </div>
          </div>    
        </div>-->

        <div class="field">
          <div class="items">
            <div class="block-100">
          <%= form.label :district_id, "Distrito"%>
            </div>
            <div class="block-100">
              <%= form.select :district_id, District.all.collect {|e| [e.name, e.id]} , { :include_blank => "Seleccione" }, { :class => "form-control" } %>
            </div>
          </div>   

        <div class="field">
          <div class="items">
            <div class="block-100">
          <%= form.label :location_type_id ,"Tipo Locación"%>
            </div>
            <div class="block-100">
              <%= form.select :location_type_id, LocationType.all.collect {|e| [e.name, e.id]} , { :include_blank => "Seleccione" }, { :class => "form-control" } %>
            </div>
          </div>    
        </div>

        <div class="items">
          <div class="block-50-center">
            <%= form.submit "Guardar", :class => "btn btn-success" %>
          </div>       
          <div class="block-50-center" >
              <%= link_to 'Atras', locations_path, :class => "btn btn-info" %>
          </div>
        </div>
      <% end %>
    </fieldset>
  </div> 
</div>