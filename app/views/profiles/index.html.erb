<p id="notice"><%= notice %></p>

<h1 class="h3 mb-4 text-info font-weight-bold">Perfiles de usuarios</h1>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">
      <%= link_to 'Nuevo Perfil Usuario', new_profile_path, { :class => "btn btn-success btn-sm"} %></h6>
  </div>
  <div class="card-body">
    <div class="table-responsive small">
      <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">

        <div class="row">
          <div class="col-sm-12">
            <table class="table table-bordered dataTable" width="100%" cellspacing="0" role="grid"
              aria-describedby="dataTable_info" style="width: 100%;">
              <thead>
                <tr role="row">
                  <th>Nombre</th>
                  <th>Descripción</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @profiles.each do |profile|  %>
                <tr>
                  <td><%= profile.name %></td>
                  <td><%= profile.description %></td>
                  <td><%= link_to 'Detalle', profile,:class => "text-info" %></td>
                  <td><%= link_to 'Editar', edit_profile_path(profile), :class => "text-warning" %></td>
                  <td>
                    <%= link_to 'Eliminar', profile, :class => "text-danger", method: :delete, data: { confirm: '¿Seguro de eliminar el elemento seleccionado?' } %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>