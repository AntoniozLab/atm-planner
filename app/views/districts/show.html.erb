<div class="row">
  <div class="col-lg-10">

    <div class="card position-relative">
      <div class="card-header py-3">
        <h2 class="title">Detalle Destritos</h2>
      </div>
      <div class="card-body">
        <div>
        	<div class="items">
  				<div class="block-form">
		          <fieldset-standard>
				   	<div class="field">
						<div class="items">
					    	<div class="block-100">
					         	<strong>Nombre:</strong> 
					        </div>
				            <div class="block-100">
				            	<%= @district.name %> 
				            </div>
					  	</div>                
					</div>
				    <div class="field">
					    <div class="items">
					        <div class="block-100">
					      		<strong>Ubigeo:</strong>
					        </div>
					        <div class="block-100">
					       		<%= @district.ubigeo %>
					        </div>
					    </div>                
					</div>
					<div class="field">
					    <div class="items">
					        <div class="block-100">
					      		<strong>Provincia:</strong>
					        </div>
					        <div class="block-100">
					       		<%= Province.find(@district.province_id).name %>
					        </div>
					    </div>                
					</div>
					<div class="items">
			          <div class="block-50-center">
			            <%= link_to "Editar", edit_district_path(@district), :class => "btn btn-success" %>
			          </div>
			          <div class="block-50-center" >
			              <%= link_to 'Atras', districts_path, :class => "btn btn-info" %>
			          </div>
			        </div>
				  </fieldset>
				</div> 
			</div>
        </div>
      </div>
    </div>
  </div>
</div>