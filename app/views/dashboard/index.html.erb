                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Perfil</th>
              </tr>
            </tfoot>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= Profile.find(user.profile_id).name %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

