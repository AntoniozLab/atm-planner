        </div>
      </div>
      <!-- Card Body -->
      <div class="card-body">
        <div class="table-responsive small">
          <table
            class="table table-bordered"
            id="dataTable"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Perfil</th>
              </tr>
            </thead>
