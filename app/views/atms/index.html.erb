<p id="notice"><%= notice %></p>

<h2>Lista Atms</h2>


<table class="table">
  <thead class="thead-dark" align="center">
    <tr>
      <th scope="col">Nro. Serie</th>
      <th scope="col">Descripción</th>
      <th scope="col">Fecha Manufactura</th>
      <th scope="col">Modelo</th>
      <th scope="col">Tipo</th>
      <th scope="col">Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @atms.each do |atm|  %>
    <tr align="center">
      <td><%= atm.serial_number %></td>
      <td><%= atm.description %></td>
      <td><%= atm.manufactoring_date %></td>
      <td><%= AtmModel.select(:name).where("id = " + atm.atm_model_id.to_s).collect(&:name)[0] %></td>
      <td><%= AtmType.select(:name).where("id = " + atm.atm_type_id.to_s).collect(&:name)[0] %></td>
      <td><%= AtmState.select(:name).where("id = " + atm.atm_state_id.to_s).collect(&:name)[0] %></td>
      <td><%= link_to 'Mostrar', atm %></td>
      <td><%= link_to 'Editar', edit_atm_path(atm) %></td>
      <td>
        <%= link_to 'Eliminar', atm, method: :delete, data: { confirm: '¿Está seguro de eliminar el ATM seleccionado?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


<br>
<hr>

<div>
  <%= will_paginate @atm,renderer: BootstrapPagination::Rails %>
  <div class="text.center"><%= page_entries_info %></div>

</div>



<hr>

<%= link_to 'Nuevo Atm', new_atm_path %>