<p id="notice"><%= notice %></p>

<h1 class="h3 mb-4 text-info font-weight-bold">Marcas de ATMs</h1>
<div class="row">
  <div class="col-lg-11">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          <%= link_to 'Nueva marca ATM', new_atm_brand_path, { :class => "btn btn-success btn-sm"} %></h6>
      </div>
      <div class="card-body">
        <div class="table-responsive small">



          <table class="table table-bordered dataTable" width="100%" cellspacing="0" role="grid"
            aria-describedby="dataTable_info" style="width: 100%;">
            <thead>
              <tr role="row">
                <th>Nombre Marca</th>
                <th>Descripción</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @atm_brands.each do |atm_brand|  %>
              <tr>
                <td><%= atm_brand.name %></td>
                <td><%= atm_brand.description %></td>
                <td><%= link_to 'Detalle', atm_brand,:class => "text-info" %></td>
                <td><%= link_to 'Editar', edit_atm_brand_path(atm_brand), :class => "text-warning" %></td>
                <td>
                  <%= link_to 'Eliminar', atm_brand, :class => "text-danger", method: :delete, data: { confirm: '¿Seguro de eliminar el elemento seleccionado?' } %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>


        </div>
      </div>
    </div>
  </div>
</div>