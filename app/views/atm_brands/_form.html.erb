<div class="items">
  <div class="block-form">
    <fieldset-standard>

      <%= form_with(model: atm_brand, local: true, html: {class: 'admin' }) do |form| %>
      <% if atm_brand.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(atm_brand.errors.count, "error") %> prohibited this atm from being saved:</h2>

        <ul>
          <% atm_brand.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <div class="field">
        <div class="items">
          <div class="block-100">
            <%= form.label :Marca %>
          </div>
          <div class="block-100">
            <%= form.text_field :name, { :class => "form-control"} %>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="items">
          <div class="block-100">
            <%= form.label :Descripción %>
          </div>
          <div class="block-100">
            <%= form.text_field :description, { :class => "form-control"} %>
          </div>
        </div>
      </div>

      <div class="items">
        <div class="block-50-center">
          <%= form.submit "Guardar", :class => "btn btn-success" %>
        </div>
        <div class="block-50-center">
          <%= link_to 'Atrás', atm_brands_path, :class => "btn btn-info" %>
        </div>
      </div>
      <%end%>

      </fieldset>
  </div>
</div>