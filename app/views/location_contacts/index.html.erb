<p id="notice"><%= notice %></p>

<h1>Location Contacts</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Position name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_contacts.each do |location_contact| %>
      <tr>
        <td><%= location_contact.first_name %></td>
        <td><%= location_contact.last_name %></td>
        <td><%= location_contact.phone %></td>
        <td><%= location_contact.email %></td>
        <td><%= location_contact.position_name %></td>
        <td><%= location_contact.location_id %></td>
        <td><%= link_to 'Show', location_contact %></td>
        <td><%= link_to 'Edit', edit_location_contact_path(location_contact) %></td>
        <td><%= link_to 'Destroy', location_contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

