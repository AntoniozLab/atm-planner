<p id="notice"><%= notice %></p>

<h1>Requirement States</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requirement_states.each do |requirement_state| %>
      <tr>
        <td><%= requirement_state.name %></td>
        <td><%= link_to 'Show', requirement_state %></td>
        <td><%= link_to 'Edit', edit_requirement_state_path(requirement_state) %></td>
        <td><%= link_to 'Destroy', requirement_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

